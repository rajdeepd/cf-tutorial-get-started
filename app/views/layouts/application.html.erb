<!DOCTYPE HTML>
<html>
  <head>
    <title>Cloud Foundry</title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="contentWrapper">
      <div class= "blue-b">
        <div class="inside-nav">
          <div class="logo">
            <img src="<%= asset_path 'logo.png' %>">
          </div>
          <div id="nav">
            <ul>
              <li class="<%= params[:action].eql?('ruby_docs') ? 'selected' : '' %>">
                <%= link_to 'Ruby', ruby_docs_path() %>
              </li>
               <li class="<%= params[:action].eql?('ruby_docs') ? 'selected' : '' %>">
                <%= link_to 'Rails', ruby_on_rails_docs_path() %>
              </li>
              <li class="<%= params[:action].eql?('sts_docs') ? 'selected' : '' %>">
                <%= link_to 'STS', sts_docs_path() %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class= "mc-a">
        <%= yield %>
      </div>
    </div>
    <%= render :partial => "layouts/footer" %>
  </body>
</html>